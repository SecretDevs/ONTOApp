<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.ProductCard"
    android:id="@+id/item_product_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_product_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_product_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/gutter_default"
            android:layout_marginTop="@dimen/gutter_default"
            android:layout_marginEnd="@dimen/gutter_default"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/AppTheme.SmoothCornerView"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/item_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gutter_default"
            android:textAppearance="@style/TextAppearance.AppTheme.ItemProductNameText"
            app:layout_constraintEnd_toEndOf="@+id/item_product_image"
            app:layout_constraintStart_toStartOf="@+id/item_product_image"
            app:layout_constraintTop_toBottomOf="@+id/item_product_image"
            tools:text="Туркменский таракан консервированный ONTO" />

        <TextView
            android:id="@+id/item_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppTheme.ItemProductPriceText"
            app:layout_constraintBottom_toBottomOf="@+id/item_product_cart_btn"
            app:layout_constraintStart_toStartOf="@+id/item_product_name"
            app:layout_constraintTop_toTopOf="@+id/item_product_cart_btn"
            tools:text="275 ₽" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_product_cart_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="@dimen/margin_default"
            android:background="@drawable/gradient"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:src="@drawable/ic_add_to_cart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/item_product_name"
            app:layout_constraintTop_toBottomOf="@+id/item_product_name"
            app:shapeAppearanceOverlay="@style/AppTheme.CircleImageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>