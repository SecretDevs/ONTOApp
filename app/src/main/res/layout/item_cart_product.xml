<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cart_product_image"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_default"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/AppTheme.SmoothCornerView"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/cart_product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:maxLines="3"
        android:textAppearance="@style/TextAppearance.AppTheme.CartProductItemTitle"
        app:layout_constraintBottom_toTopOf="@+id/product_details_minus_btn"
        app:layout_constraintEnd_toStartOf="@+id/cart_product_remove"
        app:layout_constraintStart_toEndOf="@+id/cart_product_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Туркменский таракан консервированный ONTO" />

    <ImageView
        android:id="@+id/cart_product_remove"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:src="@drawable/ic_remove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cart_product_minus_btn"
        style="@style/AppTheme.IconOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        app:icon="@drawable/ic_minus"
        app:layout_constraintBottom_toBottomOf="@+id/cart_product_image"
        app:layout_constraintStart_toEndOf="@+id/cart_product_image" />

    <TextView
        android:id="@+id/cart_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:textAppearance="@style/TextAppearance.AppTheme.ItemProductPriceText"
        app:layout_constraintBottom_toBottomOf="@+id/cart_product_minus_btn"
        app:layout_constraintStart_toEndOf="@+id/cart_product_minus_btn"
        app:layout_constraintTop_toTopOf="@+id/cart_product_minus_btn"
        tools:text="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cart_product_plus_btn"
        style="@style/AppTheme.IconOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        app:icon="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@+id/cart_product_minus_btn"
        app:layout_constraintStart_toEndOf="@+id/cart_product_quantity"
        app:layout_constraintTop_toTopOf="@+id/cart_product_minus_btn" />

    <TextView
        android:id="@+id/cart_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppTheme.ItemProductPriceText"
        app:layout_constraintBottom_toBottomOf="@+id/cart_product_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/product_details_plus_btn"
        tools:text="275 ₽" />

    <View
        style="@style/DividerStyle"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>