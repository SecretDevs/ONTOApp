<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorPrimarySurface</item>
        <item name="colorError">@color/colorPrimaryError</item>

        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnError">@color/colorOnError</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowContentTransitions">true</item>

        <item name="bottomNavigationStyle">@style/AppTheme.BottomNavigationView</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="android:background">@color/colorPrimarySurface</item>
    </style>

    <style name="AppTheme.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">\
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.BottomNavigationView</item>
    </style>

    <style name="AppTheme.ProductCard" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/AppTheme.SmoothCornerView</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="AppTheme.ArticleCard" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/AppTheme.SmoothCornerView</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="AppTheme.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/AppTheme.SmoothCornerView</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="AppTheme.MarkerWindowCard" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/AppTheme.SmoothCornerView</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Button.OnPrimary</item>
        <item name="android:background">@drawable/gradient</item>
        <item name="backgroundTint">@null</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="AppTheme.RetryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Button.OnPrimary</item>
        <item name="background">@color/colorPrimaryAlphaBackground</item>
        <item name="backgroundTint">@color/colorPrimaryAlphaBackground</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="AppTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorOnSurfaceMedium</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Button.OnPrimary</item>
    </style>

    <style name="ThemeOverlay.AppTheme.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorGray</item>
    </style>
    <style name="AppTheme.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/margin_default</item>
    </style>

    <style name="AppTheme.OverlayTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="editTextStyle">@style/AppTheme.TextInputEditText</item>
        <item name="colorControlActivated">@color/colorOnPrimary</item>
    </style>

    <style name="AppTheme.EditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="boxBackgroundColor">@color/colorPrimarySurface</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintEnabled">false</item>
        <item name="shapeAppearance">@style/AppTheme.EditLayoutShape</item>
        <item name="materialThemeOverlay">@style/AppTheme.OverlayTextInputEditText</item>
    </style>

    <style name="AppTheme.EditLayoutShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="AppTheme.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.SmoothCornerView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppTheme.ProductAddShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppTheme.ProductImageShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>

    <style name="AppTheme.FabArticleTop" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/AppTheme.FabThemeOverlay</item>
        <item name="shapeAppearanceOverlay">@style/AppTheme.SmoothCornerView</item>
    </style>

    <style name="AppTheme.FabThemeOverlay" parent="">
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
        <item name="colorOnSurface">@color/colorOnPrimary</item>
    </style>

    <style name="AppTheme.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="AppTheme.CheckoutPrevButton" parent="Widget.MaterialComponents.Button.OutlinedButton">4
        <item name="backgroundTint">@color/colorPrimaryAlphaBackground</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">22dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:minWidth">72dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#F1F1F1</item>
    </style>

    <style name="AppTheme.PetChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/colorPrimaryAlphaBackground</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/ic_rounded_dialog</item>
    </style>

</resources>