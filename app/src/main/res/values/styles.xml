<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorPrimarySurface</item>
        <item name="colorError">@color/colorPrimaryError</item>

        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnError">@color/colorOnError</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowContentTransitions">true</item>

        <item name="bottomNavigationStyle">@style/AppTheme.BottomNavigationView</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="android:background">@color/colorPrimarySurface</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="AppTheme.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">\
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.BottomNavigationView</item>
    </style>

    <style name="AppTheme.ProductCard" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/AppTheme.SmoothCornerView</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="AppTheme.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/AppTheme.SmoothCornerView</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Button.OnPrimary</item>
        <item name="android:background">@drawable/gradient</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="AppTheme.CartBadge" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.BadgeText</item>
        <item name="android:textColor">@color/colorOnBadge</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="chipBackgroundColor">@color/colorBadgeBackground</item>
        <item name="chipStrokeColor">@color/colorPrimarySurface</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipMinHeight">20dp</item>
        <item name="textStartPadding">2dp</item>
        <item name="textEndPadding">0dp</item>
    </style>

    <style name="ThemeOverlay.AppTheme.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorGray</item>
    </style>

    <style name="AppTheme.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.SmoothCornerView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>